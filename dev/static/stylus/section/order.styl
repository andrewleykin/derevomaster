.order
  background-color cardinal
  padding 50px 0
  margin-bottom 50px
  position relative
  &:before
    content ''
    display block
    width 56%
    height 900px
    background-color anzac
    position absolute
    bottom -120px
    left 0
    z-index -1
  @media (max-width breakpoint-md)
    margin-bottom 20px
    padding 20px 0
    &:before
      width 72%
      height 700px
      bottom -75px
  @media (max-width breakpoint-sm)
    &:before
      display none

.order__wrap
  display flex
  justify-content space-between
  max-width 935px
  width 100%
  margin 0 auto
  @media (max-width breakpoint-lg)
    padding 0 20px
  @media (max-width breakpoint-md)
    display block

.order__info
  position relative
  width 100%
  max-width 335px
  margin-right 20px
  color white
  padding-top 20px
  @media (max-width breakpoint-md)
    max-width 100%
    margin-bottom 20px
    margin-right 0
    padding-top 0

.order__img
  position absolute
  bottom 100%
  right 170px
  img
    max-width none
  @media (max-width breakpoint-md)
    display none

.order__title
  font-family font-ibm
  font-size 40px
  font-weight bold
  margin-bottom 40px

.order__descr
  font-size 20px
  line-height 28px

.order__form
  width 100%
  max-width 400px
  .form__group
    &.invalid
      .order__input
        animation shake .4s
    &.email
      .order__input
        padding-right 200px
  .form__group + .form__group
    margin-top 20px

@keyframes shake {
  0% {
    transform translateX(-20px)
  }
  25% {
    transform translateX(20px)
  }
  50% {
    transform translateX(-20px)
  }
  100% {
    transform translateX(0px)
  }
}

.order__input
  width 100%
  height 50px
  border-radius 40px
  background-color ebony-clay
  padding 0 30px
  color white
  cursor pointer

.order__label
  color rgba(white, .8)
  font-size 16px
  letter-spacing -0.27px
  left 30px
  top 20px
  cursor pointer

.order__btn
  width 140px
  height 50px
  border-radius 40px
  background-color white
  display flex
  align-items center
  justify-content center
  color cardinal
  font-size 16px
  letter-spacing -0.27px
  margin-left auto
  transform translateY(-50px)
  cursor pointer
  transition all .2s
  border 1px solid transparent
  &:hover
    background-color transparent
    color white
    border-color white