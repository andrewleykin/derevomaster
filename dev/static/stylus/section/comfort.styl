.comfort
  margin-bottom 80px
  @media (max-width breakpoint-md)
    margin-bottom 40px
  @media (max-width breakpoint-sm)
    text-align center
    margin-bottom 30px

.comfort__wrap
  display flex
  width 100%
  max-width 79%
  @media (max-width breakpoint-xl)
    max-width 100%
  @media (max-width breakpoint-md)
    display block

.comfort__orders
  width 100%
  max-width 38.4%
  display flex
  flex-direction column
  align-items flex-end
  font-size 18px
  @media (max-width breakpoint-xl)
    max-width 25%
  @media (max-width breakpoint-md)
    max-width 100%
    align-items center
    text-align center
    margin-bottom 30px

.comfort__orders-title
  font-family font-ibm
  font-weight bold
  line-height 18px
  margin-bottom 40px
  max-width 205px
  display block
  @media (max-width breakpoint-md)
    margin-bottom 20px
  @media (max-width breakpoint-sm)
    margin-bottom 10px

.comfort__order-item
  &+&
    margin-top 15px
  @media (max-width breakpoint-sm)
    &+&
      margin-top 5px

.comfort__main
  width 100%
  padding 0 110px
  @media (max-width breakpoint-xxl)
    padding 0 50px
  @media (max-width breakpoint-md)
    padding 0 20px

.comfort__title
  font-family font-ibm
  font-size 50px
  font-weight bold
  line-height 55px
  max-width 600px
  margin-bottom 90px
  @media (max-width breakpoint-xl)
    margin-bottom 40px
  @media (max-width breakpoint-sm)
    font-size 32px
    line-height 36px
    margin-bottom 10px

.comfort__row
  display flex
  @media (max-width breakpoint-sm)
    display block

.comfort__col
  width 100%
  max-width 366px
  &+&
    margin-left 75px
  @media (max-width breakpoint-xxl)
    &+&
      margin-left 40px
  @media (max-width breakpoint-sm)
    max-width 100%
    &+&
      margin-left 0
      margin-top 10px

.comfort__text
  font-size 20px
  font-weight 300
  line-height 30px
  position relative
  &:before
    content ''
    width 19px
    height 14px
    background url('../img/content/comfort/quote.png') center no-repeat
    position absolute
    top 0
    left -30px
    display none
  &+&
    margin-top 40px
  &.accent
    color mariner
    font-weight bold
    font-style italic
    &:before
      display block
  @media (max-width breakpoint-sm)
    &:before
      left 0
    &+&
      margin-top 10px