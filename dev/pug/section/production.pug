section.production#production
  .production__symbols
    img(src=content.production.symbols.src alt=content.production.symbols.alt)
  .production__wrap
    .production__promo
      a.production__promo-block(href="#promo-video")
        span.production__promo-text= content.production.promo
        .production__promo-play
          +icon(content.general.icon.play)
    .production__img
      img(src=content.production.table.src alt=content.production.table.alt)
    .production__info
      h3.production__title= content.production.title
      h4.production__name= content.production.name
      p.production__text= content.production.text
  .production__promo-modal.remodal(data-remodal-id="promo-video")
    button(data-remodal-action="close" class="remodal-close")
    .production__promo-modal-wrap
      iframe(width="100%" src="https://www.youtube.com/embed/RfN5UPUo8Mw" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen)
