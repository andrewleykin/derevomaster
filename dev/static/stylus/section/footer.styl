.footer
  background-color dark-fern
  padding 40px 0
  @media (max-width breakpoint-md)
    padding 20px

.footer__wrap
  max-width 1034px
  padding 0 17px
  margin 0 auto
  display flex
  align-items center
  justify-content space-between
  @media (max-width breakpoint-md)
    padding 0
  @media (max-width breakpoint-sm)
    display block
    text-align center

.footer__logo
  display flex
  align-items center
  color rgba(white, .5)
  font-size 16px
  font-weight 300
  @media (max-width breakpoint-sm)
    flex-direction column
    align-items center
    margin-bottom 10px

.footer__logo-img
  width 34px
  margin-right 17px
  @media (max-width breakpoint-md)
    margin-right 10px
  @media (max-width breakpoint-sm)
    margin-right 0
    margin-bottom 10px

.footer__logo-name
  font-size 16px

.footer__social
  display flex
  align-items center
  @media (max-width breakpoint-sm)
    display block

.footer__social-title
  color wild-sand
  font-size 16px
  text-transform uppercase
  margin-right 35px
  @media (max-width breakpoint-md)
    margin-right 10px
  @media (max-width breakpoint-sm)
    margin-right 0
    margin-bottom 10px

.footer__social-link
  transition all .2s
  &:hover
    opacity 0.8
  &+&
    margin-left 30px
  .icon
    width 20px
    height 20px
    fill white
  @media (max-width breakpoint-md)
    &+&
      margin-left 10px
